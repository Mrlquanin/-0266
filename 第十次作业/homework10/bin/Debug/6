        </script>
        <script type="text/javascript">
            $("body").scrollTop(0);
            window.scrollTo(0, document.body.scrollHeight);
            document.body.scrollTop = 0;
            $('body,html').animate({ scrollTop: 0 }, 100);

            if (window.navigator.userAgent.toLowerCase().indexOf('firefox') >= 0) {
                $('.detail_couplet_game').remove();
            } else {
                $('.detail_couplet_bd').remove();
            }
            function addFavorite2() {
                _hmt.push(['_trackEvent', 'detail', 'click', 'share_favorite']);
                var url = window.location;
                var title = document.title;
                var ua = navigator.userAgent.toLowerCase();
                if (ua.indexOf("360se") > -1) {
                    $('.sethomepagepop').show();
                } else if (ua.indexOf("msie 8") > -1) {
                    window.external.AddToFavoritesBar(url, title); //IE8
                } else if (document.all) {
                    try {
                        window.external.addFavorite(url, title);
                    } catch (e) {
                        $('.sethomepagepop').show();
                    }
                } else if (window.sidebar) {
                    window.sidebar.addPanel(title, url, "");
                } else {
                    $('.sethomepagepop').show();
                }
            }
            $('.sethomepagepop a').click(function () {
                $('.sethomepagepop').hide();
            });
            //推荐页的前一页添加收藏的功能
            function randNum_prev(){
                var addFavorite_boolean = $.cookie("addFavorite") == "close"?true:false;
                if($(".randNum").eq(0).prev().attr("class").indexOf("on")>-1 && !addFavorite_boolean){
                    addFavorite2()
                    var date = new Date();
                    var hours = date.getHours()
                    var _time = (24 - hours) * 60 * 60;
                    date.setTime(date.getTime() + _time * 1000);
                    $.cookie("addFavorite", "close", { expires: date, path: "/" });
                }

            }
            var qid = $.cookie("qid")
            $.ajax({
                url: config.url + '/api/detail_get_next/' + config.id,
                dataType: "json",
                type: "GET",
                success: function(data) {
                    // if(qid == "huohu") {
                        var dataList = data.list;
                        dataList.push({"url":config.url});
                        $('.randNum').each(function() {
                            var hrefRand = Math.ceil(Math.random() * (dataList.length - 1))
                            var href;
                            if(hrefRand == 27) {
                                href = dataList[hrefRand].url;
                            } else {
                                href = dataList[hrefRand].url + '?TAG=3_27_11'
                            }
                            $(this).attr('href', href);
                        })
                    // } else {
                    //     $('.randNum').each(function() {
                    //         var href = config.url;
                    //         $(this).attr('href', href);
                    //     }) 
                    // }
                }
            })
            // $('.randNum').each(function () {
            //     var href;
            //     // if(qid == '7654dh04' || qid == 'xykxzc' || qid == 'mini015') {
            //         href = config.url + '/detail_recommend/' + config.id + '?TAG=3_27_11';
            //     // } else {
            //     //     href = config.url
            //     // }
            //     // $(this).attr('href', href + '/recommend'+'?cat_id='+ '14'+ '&row='+ config.id);
            //     $(this).attr('href', href);
            // });
            $.each($(".randNum"), function(i,item) {
                $(item).on("click",function(){
                    $(this).attr("rel","noopener noreferrer");
                })
            });
        </script>
