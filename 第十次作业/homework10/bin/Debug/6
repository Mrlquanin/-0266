        <script async="" src="https://securepubads.g.doubleclick.net/tag/js/gpt.js"></script>
        <script>
        // 谷歌广告
            // 监听打底
            // @slotId  分配广告位ID
            // @placeholderId  预留div 
            // @size  尺寸
            // @callback  无广告填充回调
            function renderAd(slotId, placeholderId, size, callback, gid, adId, baiduSize){
                window.googletag = window.googletag || {cmd: []};
                var el = document.getElementById(placeholderId);
                googletag.cmd.push(function() {
                    var pubads = googletag.pubads();
                    var adSlot = googletag.defineSlot(slotId, size, placeholderId).addService(pubads);
                    pubads.enableSingleRequest();
                    googletag.enableServices();
                    googletag.cmd.push(function() {
                        pubads.addEventListener('slotRenderEnded', function(event) {
                            if(adSlot == event.slot){
                                if(event.isEmpty){
                                    try{
                                        callback && callback(adId, placeholderId, el, size, baiduSize, event);
                                    }catch(e){}
                                }
                            }
                        });
                        googletag.display(placeholderId);
                    });
                });
                baidu_Report.str({
                    ad_id: "null",
                    position: gid,
                    time: new Date().getTime(),
                    ad_type: "gg",
                    behavior:"show"
                }) 
                baidu_Report.newUpload({
                    ad_id: "null",
                    position: gid,
                    time: new Date().getTime(),
                    ad_type: "gg",
                    behavior:"show"
                })
            }

            // 打底回调
            function whenAdIsEmpty(adId, position, wrapper, size, baiduSize){
                // console.log('whenAdIsEmpty render start');
                baidu_Report.str({
                    ad_id: adId,
                    position: position,
                    time: new Date().getTime(),
                    ad_type: "baidu",
                    behavior:"show"
                })
                baidu_Report.newUpload({
                    ad_id: adId,
                    position: position,
                    time: new Date().getTime(),
                    ad_type: "baidu",
                    behavior:"show"
                })
                wrapper.innerHTML = '';
                // demo
                var adSuma = 'd=p&s=b&u=' + adId + '&w=' + baiduSize[0] + '&h=' + baiduSize[1]
                var sc = document.createElement('script');
                sc.src = 'http://www.nkscdn.com/smu0/o.js';
                sc.setAttribute('smua', adSuma)
                wrapper.appendChild(sc);
            }
            
            // renderAd('/114727985/ca-pub-8977109552607361-tag/hoteastday.com', 'ndetailpage_r7', [300, 250], whenAdIsEmpty, 'ndetailpage_gr7', 'u3601940', [300, 250]);
            // renderAd('/114727985/ca-pub-8977109552607361-tag/hoteastday.com1', 'ndetailpage_r3', [300, 250], whenAdIsEmpty, 'ndetailpage_gr3', 'u3601692', [300, 250]);
